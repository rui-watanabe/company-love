<div class="card-group">
  <div class="card" style="width:18rem;">
    <%= image_tag current_user.avatar, class:"card-img-top",alt:"Card image cap" %></div>
    <div class="card-body">
    <h4 class="card-title"><%= @tweet.user.name %></h4>
      <p class="card-text"><%= @tweet.text%></p>
      <p class="card-text"><small class="text-muted"><%= tweet.created_at.strftime("%Y-%m-%d %H:%M")%></small></p>
      <div class="row">
        <div class="col-md">
            <% if user_signed_in? && current_user.id == @tweet.user_id %>
              <button class="btn btn-info">
                <%= link_to '編集', "/tweets/#{@tweet.id}/edit", method: :get %>
              </button>
              <button class="btn btn-info">
                <%= link_to '削除', "/tweets/#{@tweet.id}"%>
              </button>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

    <!-- ここからフォーム -->
    <% if current_user %>
      <%= form_tag("/tweets/#{@tweet.id}/comments",  method: :post,  id: "new_comment" ) do %>
        <textarea cols="30" name="text" placeholder="コメントする" rows="2" class="textbox"></textarea>
        <input type="submit" value="SENT">
      <% end %>
    <% end %>
    <div class="comments">   
      <h4>＜コメント一覧＞</h4>
      <% if @comments %>
        <% @comments.each do |comment| %>
          <p>
            <strong><%= link_to comment.user.name, "/users/#{comment.user_id}" %>：</strong>
            <%= comment.text %>
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>