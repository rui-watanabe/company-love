<div id="follow_form" style="text-align:center; margin-top:10px;" >
  <% if current_user.following? @user %>
    <%= link_to "気になる削除", {controller: :users,action: :unfollow,user_id: @user.id}, method: :put, class:"btn btn-primary"%>
  <% else %>
    <%= link_to "気になる", {controller: :users,action: :follow,user_id: @user.id}, method: :put ,class:"btn btn-primary" %>
  <% end %>
</div>

