<div class="main users-index">
  <div class="container">
    <h1 class="users-heading" style="text-align:center; padding-bottom:40px;">ユーザー一覧</h1>
    <% @users.each do |user| %>
  <div class="border" style= "padding-top: 25px;">
  <div class="card-group">
  <div class="card">
    <%= image_tag user.avatar,style:"width:400px; height:400px;"%></div>
    <div class="card-body">
    <h4 class="card-title"><%= user.name %></h4>
      <p class="card-text">プロフィール：<br><%= user.profile%></p>
      <div class="button_wrapper" >
      <button class="btn btn-info" >
        <%= link_to '詳細', "/users/#{user.id}"%>
      </button>
      </div>
    </div>
  </div>
  <% end %>
</div>
</div>
</div>

<button class="btn btn-primary">マッチング済</button>
<button class="btn btn-primary">いいね済</button>
<button class="btn btn-primary">いいねされた</button>